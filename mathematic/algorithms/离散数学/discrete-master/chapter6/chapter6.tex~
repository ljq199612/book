\begin{frame}
  \frametitle{6.6 哈密顿图}
  \begin{theorem6.6.2}
    设$G$是有$p(p \geq 3)$个顶点的图。如果对$G$的任一对不邻接的顶点$u$和$v$，均有
    \begin{equation*}
      \deg u + \deg v \geq p,
    \end{equation*}
则$G$是一个哈密顿图。
  \end{theorem6.6.2}
\end{frame}

\begin{frame}
  \frametitle{6.6 哈密顿图}
  \begin{theorem6.6.3}
    设$G$是一个有$p$个顶点的图，如果对$G$的每一对不临接的顶点$u$和$v$，均有
    \begin{equation*}
      \deg u + \deg v \geq p - 1,
    \end{equation*}
则$G$有哈密顿路。
  \end{theorem6.6.3}
\end{frame}
\begin{frame}
  \frametitle{6.6 哈密顿图}
  \begin{theorem6.6.4}
    设$G$是一个有$p$个顶点的图，如果对$G$的每一对不临接的顶点$u$和$v$，均有
    \begin{equation*}
      \deg u + \deg v \geq p - 1,
    \end{equation*}
则$G$是连通的。
\end{theorem6.6.4}
